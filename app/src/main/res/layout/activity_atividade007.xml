<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atividade007">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/Atv07RaioBase"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:layout_margin="45dp"
        android:ems="10"
        android:hint="Digite o raio da base da lata"
        android:inputType="numberDecimal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/Atv07Altura"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="digite a altura da lata"
        android:layout_margin="45dp"
        android:padding="10dp"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/Atv07RaioBase"
        app:layout_constraintStart_toStartOf="@+id/Atv07RaioBase"
        app:layout_constraintTop_toBottomOf="@+id/Atv07RaioBase" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Atv07Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        android:background="@drawable/background_button"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/Atv07Altura"
        app:layout_constraintStart_toStartOf="@+id/Atv07Altura"
        app:layout_constraintTop_toBottomOf="@+id/Atv07Altura" />

    <TextView
        android:id="@+id/Atv07Message"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_margin="45dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Atv07Btn" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Atividade 07"
        android:textSize="20sp"
        android:textColor="#2545E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>