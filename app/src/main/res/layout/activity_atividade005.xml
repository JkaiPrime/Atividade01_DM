<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atividade005">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/Atv05Nota1"
        android:layout_width="244dp"
        android:layout_height="54dp"
        android:layout_margin="45dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:padding="10dp"
        android:hint="Nota 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/Atv05Nota2"
        android:layout_width="244dp"
        android:layout_height="54dp"
        android:layout_margin="35dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:padding="10dp"
        android:hint="Nota 2"
        app:layout_constraintEnd_toEndOf="@+id/Atv05Nota1"
        app:layout_constraintStart_toStartOf="@+id/Atv05Nota1"
        app:layout_constraintTop_toBottomOf="@+id/Atv05Nota1" />

    <EditText
        android:id="@+id/Atv05Nota3"
        android:layout_width="244dp"
        android:layout_height="54dp"
        android:layout_margin="35dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:padding="10dp"
        android:hint="Nota 3"
        app:layout_constraintEnd_toEndOf="@+id/Atv05Nota2"
        app:layout_constraintStart_toStartOf="@+id/Atv05Nota2"
        app:layout_constraintTop_toBottomOf="@+id/Atv05Nota2" />

    <EditText
        android:id="@+id/Atv05Nota4"
        android:layout_width="244dp"
        android:layout_height="54dp"
        android:layout_margin="35dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:padding="10dp"
        android:hint="Nota 4"
        app:layout_constraintEnd_toEndOf="@+id/Atv05Nota3"
        app:layout_constraintStart_toStartOf="@+id/Atv05Nota3"
        app:layout_constraintTop_toBottomOf="@+id/Atv05Nota3"
        tools:ignore="LabelFor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Atv05Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Calcular"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@+id/Atv05Nota4"
        app:layout_constraintStart_toStartOf="@+id/Atv05Nota4"
        app:layout_constraintTop_toBottomOf="@+id/Atv05Nota4" />

    <TextView
        android:id="@+id/Atv05Message"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_margin="45dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Atv05Btn" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Atividade 05"
        android:textSize="20sp"
        android:textColor="#2545E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>