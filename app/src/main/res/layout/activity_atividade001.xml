<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atividade001">

    <EditText
        android:id="@+id/Atv01Porcentagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="% do Aumento"
        android:inputType="numberDecimal|numberSigned"
        android:layout_margin="45dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/Atv01Salario"
        app:layout_constraintStart_toStartOf="@+id/Atv01Salario"
        app:layout_constraintTop_toBottomOf="@+id/Atv01Salario" />

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/Atv01Salario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Salario"
        android:inputType="numberDecimal|numberSigned"
        android:layout_margin="45dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Atv01Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Calcular"
        android:layout_margin="45dp"
        app:layout_constraintEnd_toEndOf="@+id/Atv01Porcentagem"
        app:layout_constraintStart_toStartOf="@+id/Atv01Porcentagem"
        app:layout_constraintTop_toBottomOf="@+id/Atv01Porcentagem" />

    <TextView
        android:id="@+id/Atv01Message"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:layout_margin="25dp"
        android:padding="15dp"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="@+id/Atv01Btn"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/Atv01Btn"
        app:layout_constraintTop_toBottomOf="@+id/Atv01Btn" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Atividade 01"
        android:textSize="20sp"
        android:textColor="#2545E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>